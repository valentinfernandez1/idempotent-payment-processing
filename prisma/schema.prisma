generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
  name      String
  email     String   @unique
  password  String
  balance   Float    @default(0.00)

  sentPayments     Payment[] @relation("PaymentSender")
  receivedPayments Payment[] @relation("PaymentReceiver")
}

model Payment {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @default(now())
  status      Status
  senderId    Int
  sender      User     @relation("PaymentSender", fields: [senderId], references: [id])
  recipientId Int
  recipient   User     @relation("PaymentReceiver", fields: [recipientId], references: [id])
}

enum Status {
  VALIDATED
  PROCESSING
  APPROVED
  REJECTED
}
